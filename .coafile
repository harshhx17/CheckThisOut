[all]
ignore = .git/**, vendor/**
max_line_length = 150
files = **/*.php, **/*.twig
use_spaces = False
editor = subl
bears = LineLengthBear

[all.php]
files = **/*.php
bears += PHPLintBear
language = php

[all.html]
files = **/*.twig
language = html
bears += coalaBear
bears += LineCountBear
max_lines_per_file = 100